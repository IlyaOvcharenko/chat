@model Web.Models.Auth.RegistrationModel

@{
    ViewBag.Title = "Registration";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Регистрация</h2>

@using (Html.BeginForm("Registration", "Auth", FormMethod.Post, new { @class = "form-horizontal" }))
{
    @Html.AntiForgeryToken()

    <fieldset>
        <div class="form-group">
            @Html.LabelFor(model => model.Login, new { @class = "col-sm-2 control-label" })

            <div class="col-sm-3">
                @Html.TextBoxFor(model => model.Login, new { @class = "form-control", placeholder = "Login" })
                @Html.ValidationMessageFor(model => model.Login)
            </div>
        </div>

        
        <div class="form-group">
            @Html.LabelFor(model => model.Password, new { @class = "col-sm-2 control-label" })

            <div class="col-sm-3">
                @Html.TextBoxFor(model => model.Password, new { @class = "form-control", placeholder = "Password", type = "password" })
                @Html.ValidationMessageFor(model => model.Password)
            </div>
        </div>

        <div class="form-group">

            @Html.LabelFor(model => model.City, new { @class = "col-sm-2 control-label" })
            <div class="col-sm-3">
                @Html.TextBoxFor(model => model.City, new { @class = "form-control", placeholder = "Email" })
                @Html.ValidationMessageFor(model => model.City)
            </div>
        </div>

        <div class="form-group">
            <div class="col-sm-offset-2 col-sm-10">
                <input id="reg-btn" class="btn btn-success" type="submit" value="Registration" />
            </div>

        </div>
    </fieldset>
}