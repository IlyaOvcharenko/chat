@model Web.Models.Auth.LoginModel

@{
    ViewBag.Title = "Login";
}

<h2>Login</h2>

@using (Html.BeginForm("Login", "Auth", FormMethod.Post, new { @class = "form-horizontal" }))
{
    @Html.AntiForgeryToken()
    <fieldset>
        <div class="form-group">
            <div class="col-sm-3 col-sm-offset-2">
                @Html.ValidationMessage(string.Empty, new {@class= "control-label" })
            </div>
        </div>
        <div class="form-group">
            @Html.LabelFor(model => model.Login, new { @class = "col-sm-2 control-label" })
            <div class="col-sm-3">
                @Html.TextBoxFor(model => model.Login, new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.Login, string.Empty, new { @class = "control-label" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.Password, new { @class = "col-sm-2 control-label" })
            <div class="col-sm-3">
                @Html.TextBoxFor(model => model.Password, new { @class = "form-control", type = "password" })
                @Html.ValidationMessageFor(model => model.Password, string.Empty, new { @class = "control-label" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-sm-10 col-sm-offset-2">
                <div class="col-sm-1">
                    <input type="submit" class="btn btn-success" value="Login" />
                </div>
                <div class="col-sm-2 btn">
                    @Html.ActionLink("Registration", "Registration")
                </div>
            </div>

        </div>
    </fieldset>
}


